@model LoginViewModel

<div class="row loginForm">
    <div class="col-md-8 col-md-offset-2">
        <div class="loginFormImageLogo">
            <img class="loginImageLogo" src="~/images/logo-erp-portal.png" />
        </div>
        <h2>Please login</h2>
        <form asp-controller="Account" asp-action="Login" method="post" class="form-horizontal" role="form">
            <h4>Enter your details below</h4>
            <hr />
            <input type="hidden" asp-for="ReturnUrl" />
            <div class="form-group">
                <div class="col-md-12">
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <input asp-for="UserName" class="form-control" placeholder="User" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <input asp-for="Password" class="form-control" placeholder="Password" />
                </div>
            </div>
            <div class="form-group pull-right">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-rounded">
                        <span class="glyphicon glyphicon-log-in"></span>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>